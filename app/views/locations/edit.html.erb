<div class="flex min-h-full flex-col justify-center px-6 lg:px-8">
  <%= render "application/error_messages", object: @location %>
  
  <%- title "My Location" %>

  <div class="sm:mx-auto sm:w-full sm:max-w-sm mb-10">
    <form class="space-y-6" action="/location" method="<%= current_user.location.nil? ? "POST" : "PATCH" %>">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <div>
        <label for="location_city" class="block text-sm font-medium leading-6 text-gray-900">City</label>
        <div class="mt-2">
          <input type="text" name="location[city]" id="location_city" autofocus value="<%= @location&.city %>" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <label for="location_state" class="block text-sm font-medium leading-6 text-gray-900">State</label>
        <div class="mt-2">
          <input type="text" name="location[state]" id="location_state" value="<%= @location&.state %>" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <label for="location_country" class="block text-sm font-medium leading-6 text-gray-900">Country</label>
        <div class="mt-2">
          <input type="text" name="location[country]" id="location_country" value="<%= @location&.country %>" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <label for="location_postal_code" class="block text-sm font-medium leading-6 text-gray-900">Postal Code</label>
        <div class="mt-2">
          <input type="text" name="location[postal_code]" id="location_postal_code" value="<%= @location&.postal_code %>" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <button type="submit"
          class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
          <%= current_user.location.nil? ? "Next" : "Save" %>
        </button>
        <% unless current_user.location.nil? %>
          <%= link_to "Cancel", root_path, class: "flex w-full justify-center mt-4 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <% end %>
      </div>
    </form>
  </div>
</div>