<%- title "My Profile" %>
<div class="flex min-h-full flex-col justify-center px-6 lg:px-8">
  <%= render "users/shared/error_messages" %>

  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="space-y-6" action="/users" method="PATCH">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <div>
        <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="text-sm text-gray-500">Currently waiting confirmation for: <%= resource.unconfirmed_email %>.</p>
        <% end %>
        <div class="mt-2">
          <input id="email" name="user[email]" autofocus type="email" value="<%= current_user.email %>" autocomplete="email" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Name</label>
        <div class="mt-2">
          <input id="name" name="user[name]" type="text" value="<%= current_user.name %>" autocomplete="name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <label for="telegram" class="block text-sm font-medium leading-6 text-gray-900">Telegram</label>
        </div>
        <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
          <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm">@</span>
          <input id="telegram" name="user[telegram]" type="text" value="<%= current_user.telegram %>" autocomplete="telegram" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
        </div>
        <p class="text-sm text-gray-500" id="email-description">Leave blank if you don't want to change it</p>
        <div data-controller="show-password-toggle" class="relative mt-2 rounded-md shadow-sm">
          <input data-show-password-toggle-target="password" id="password" name="user[password]" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 py-1.5 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
          <div data-action="click->show-password-toggle#toggle" class="absolute inset-y-0 right-0 flex items-center pr-3">
            <div data-show-password-toggle-target="showButton" >
              <%= heroicon "eye", options: {class: "h-5, w-5" } %>
            </div>
            <div data-show-password-toggle-target="hideButton" class="hidden">
              <%= heroicon "eye-slash", options: {class: "h-5, w-5" } %>
            </div>
          </div>
        </div>
        
      </div>

      <div>
        <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
        <%= link_to "Cancel", root_path, class: "flex w-full justify-center mt-4 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      </div>
    </form>

    

    <p class="text-center mt-10 text-sm text-gray-800">
      Unhappy?
      <%=
        link_to "Cancel my account",
        registration_path(resource_name),
        class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500",
        data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?", turbo_method: :delete  }
      %>
    </p>
  </div>
</div>


