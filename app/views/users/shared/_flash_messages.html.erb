<% if flash.any? %>
  <% flash.each do |key, msg| %>
    <% if key == 'alert' %>
      <div class="rounded-md bg-red-50 p-4 mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <div class="flex">
          <div class="ml-3">
            <div class="text-sm text-red-700">
              <p><%= msg %></p>
            </div>
          </div>
        </div>
      </div>
    <% elsif key == 'notice' %>
      <div class="rounded-md bg-green-50 p-4 mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <div class="flex">
          <div class="ml-3">
            <div class="text-sm text-green-700">
              <p><%= msg %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>